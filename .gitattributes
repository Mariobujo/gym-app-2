# Crear archivo .gitattributes
cat > .gitattributes << 'EOF'
# Text files should have normalized line endings (LF)
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sh text eol=lf

# Binary files should not be modified
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.ttf binary
*.woff binary
*.woff2 binary
EOF